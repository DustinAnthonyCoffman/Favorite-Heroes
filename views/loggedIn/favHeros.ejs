<%- include('../partials/header') %>




    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        
      <div class="carousel-inner">

        <% heros.forEach(function(hero, idx) { %>
         <% if (idx === 0) { %>
            <div class="carousel-item active">

       <%   } else {   %>
            <div class="carousel-item">
      <%    } %>
              <br>
               <h1 class= "heroName"> <%= hero.name %> </h1> 

               <h2 class="heroRating"> Score: <%= hero.rating %> </h2>

                <!-- add their rating here -->


               <img class= "frame" src="<%= hero.image %>" alt="<%= hero.name %>">
                
                <form action="/favHeros/<%=hero._id %>?_method=DELETE" method="POST">
                  <button id="deleteButton" class="btn btn-dark" type="submit">Delete</button>
                </form>
                
                
                <form class="selection" action="/favHeros/<%=hero._id %>?_method=PUT" method="POST">
                 <select name="rating" id="">
                    <option value="Awesome">Awesome</option>
                    <option value="Good">Good</option>
                    <option value="Bad">Bad</option>
                    <option value="Awful">Awful</option>
                 </select>
                  <button id="updateButton" class="btn btn-dark" type="submit">Update</button>
                </form>
              </div>
            
              <% }) %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

      </div>
      </div>

    </main>
  </body>
  </html>







